<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/ext/bootstrap/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container">
    <h1>Login</h1>
<form>
  <div class="form-group">
    <label for="username">User ID</label>
    <input type="email" class="form-control" id="username" placeholder="">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" placeholder="Password">
  </div>
  <button type="button" id="btn_ok" class="btn btn-default">Submit</button>
</form>

    </div>
  </body>

<script src="/ext/jquery/jquery-2.1.3.min.js"></script>
<script src="/ext/socket.io/socket.io.js"></script>
<script src="/ext/bootstrap/js/bootstrap.min.js"></script>
<script>

$(document).ready(function() {

	$('#btn_ok').mousedown(function() {
		login();
	});

	$('#password').keyup(function(event) {
		if(event.which == 13) {
			login();
		}
	});
	
	function login() {
		$.post("/login/doLogin", {username: $("#username").val(), password: $("#password").val() }, 
		function(data) {
			console.log(data);
			if(data.err) {
				alert("Try again");
			}
			else {
				window.location = "/pi";
			}
		});
	}
});

</script>

</html>
